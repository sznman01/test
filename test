  <!-- 彈窗 (Modal) 示例 -->
  <div id="modal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl p-6 w-96 max-w-full">
      <h3 class="font-bold text-primary mb-4" id="modal-title"></h3>
      <!-- 內容根據 modal 類型變化 -->
      <button onclick="closeModal()" class="mt-4 bg-primary text-white px-4 py-2 rounded-xl">關閉</button>
    </div>
  </div>

  <script>
    function toggleMobileMenu() {
      const menu = document.getElementById('mobile-menu');
      menu.classList.toggle('hidden');
    }

    function openModal(type) {
      const modal = document.getElementById('modal');
      const title = document.getElementById('modal-title');
      if (type === 'create-trip') {
        title.textContent = '新增旅程';
        // 添加表單元素 (這裡簡化)
      } else if (type === 'add-activity') {
        title.textContent = '新增活動';
        // 添加表單
      }
      modal.classList.remove('hidden');
    }

    function closeModal() {
      document.getElementById('modal').classList.add('hidden');
    }

    // 簡單貨幣轉換邏輯 (靜態匯率)
    const jpyInput = document.getElementById('jpy');
    const hkdInput = document.getElementById('hkd');
    const rate = 0.055;
    jpyInput.addEventListener('input', () => hkdInput.value = (jpyInput.value * rate).toFixed(2));
    hkdInput.addEventListener('input', () => jpyInput.value = (hkdInput.value / rate).toFixed(2));
  </script>

