    <script>
        const EXCHANGE_RATE = 0.055;
        let shoppingList = JSON.parse(localStorage.getItem('shoppingList')) || [];
        let reservations = JSON.parse(localStorage.getItem('reservations')) || [];
        let activities = JSON.parse(localStorage.getItem('activities')) || [];
        let checklists = JSON.parse(localStorage.getItem('checklists')) || [
            { item: 'è­·ç…§ã€ç°½è­‰', completed: false },
            { item: 'ä¿¡ç”¨å¡ã€ç¾é‡‘', completed: false },
            { item: 'æ‰‹æ©Ÿã€å……é›»å™¨', completed: false },
            { item: 'è¡Œææ‰“åŒ…', completed: false },
            { item: 'é£¯åº—é è¨‚ç¢ºèª', completed: false },
            { item: 'æ©Ÿç¥¨ç¢ºèª', completed: false }
        ];
        let currentDay = 1;
        let totalDays = 7;

        // PAGE NAVIGATION
        function showPage(pageId) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
            
            document.getElementById(pageId).classList.add('active');
            event.target.closest('.nav-item').classList.add('active');

            if (pageId === 'shopping') renderShopping();
            else if (pageId === 'reservations') renderReservations();
            else if (pageId === 'tripDetail') renderTripDetail();
            else if (pageId === 'budget') renderBudget();
            else if (pageId === 'toolbox') renderToolbox();

            if (window.innerWidth < 768) {
                document.querySelector('.sidebar').classList.remove('open');
            }
        }

        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('open');
        }

        // SHOPPING LIST
        function renderShopping(filter = 'all') {
            const container = document.getElementById('shoppingList');
            container.innerHTML = '';

            let filtered = shoppingList;
            if (filter === 'pending') filtered = shoppingList.filter(i => !i.purchased);
            if (filter === 'purchased') filtered = shoppingList.filter(i => i.purchased);

            const pending = shoppingList.filter(i => !i.purchased).length;
            const purchased = shoppingList.filter(i => i.purchased).length;

            document.getElementById('pendingCount').textContent = pending;
            document.getElementById('purchasedCount').textContent = purchased;

            filtered.forEach((item, index) => {
                const itemEl = document.createElement('div');
                itemEl.className = `shopping-item ${item.purchased ? 'completed' : ''}`;
                itemEl.innerHTML = `
                    <input type="checkbox" ${item.purchased ? 'checked' : ''} onchange="toggleShopping(${index})">
                    <div class="item-info">
                        <div class="item-name">${item.name}</div>
                        <div class="item-category">${item.category} ${item.price ? 'Â· Â¥' + item.price : ''}</div>
                    </div>
                    <button type="button" class="item-delete" onclick="deleteShopping(${index})">Ã—</button>
                `;
                container.appendChild(itemEl);
            });
        }

        function filterShopping(filter) {
            document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
            event.target.classList.add('active');
            renderShopping(filter);
        }

        function openAddShoppingModal() {
            document.getElementById('addShoppingModal').classList.add('active');
        }

        function addShopping(e) {
            e.preventDefault();
            shoppingList.push({
                name: document.getElementById('shoppingName').value,
                category: document.getElementById('shoppingCategory').value,
                price: document.getElementById('shoppingPrice').value,
                purchased: false
            });
            localStorage.setItem('shoppingList', JSON.stringify(shoppingList));
            closeModal('addShoppingModal');
            renderShopping();
            document.getElementById('addShoppingModal').querySelector('form').reset();
        }

        function toggleShopping(index) {
            shoppingList[index].purchased = !shoppingList[index].purchased;
            localStorage.setItem('shoppingList', JSON.stringify(shoppingList));
            renderShopping();
        }

        function deleteShopping(index) {
            shoppingList.splice(index, 1);
            localStorage.setItem('shoppingList', JSON.stringify(shoppingList));
            renderShopping();
        }

        // RESERVATIONS
        function renderReservations() {
            const container = document.getElementById('reservationsList');
            container.innerHTML = '';

            reservations.forEach((res, index) => {
                const typeEmoji = { 'Flight': 'âœˆï¸', 'Hotel': 'ğŸ¨', 'Rental': 'ğŸš—', 'Activity': 'ğŸ«' };
                const resEl = document.createElement('div');
                resEl.className = 'reservation-card';
                resEl.innerHTML = `
                    <div class="reservation-header">
                        <div class="reservation-badge">${res.type}</div>
                        <div class="reservation-type">${typeEmoji[res.type] || 'ğŸ“‹'} ${res.title}</div>
                    </div>
                    <div class="reservation-body">
                        ${res.number ? `<div class="reservation-field"><div class="reservation-label">é è¨‚ç·¨è™Ÿ</div><div class="reservation-value">${res.number}</div></div>` : ''}
                        ${res.date ? `<div class="reservation-field"><div class="reservation-label">ç¢ºèªæ—¥æœŸ</div><div class="reservation-value">${res.date}</div></div>` : ''}
                        ${res.details ? `<div class="reservation-field"><div class="reservation-label">è©³ç´°ä¿¡æ¯</div><div class="reservation-value">${res.details}</div></div>` : ''}
                        <div class="reservation-actions">
                            <button class="res-btn res-btn-edit" onclick="deleteReservation(${index})">åˆªé™¤</button>
                        </div>
                    </div>
                `;
                container.appendChild(resEl);
            });
        }

        function openAddReservationModal() {
            document.getElementById('addReservationModal').classList.add('active');
        }

        function addReservation(e) {
            e.preventDefault();
            reservations.push({
                type: document.getElementById('reservationType').value,
                title: document.getElementById('reservationTitle').value,
                number: document.getElementById('reservationNumber').value,
                date: document.getElementById('reservationDate').value,
                details: document.getElementById('reservationDetails').value
            });
            localStorage.setItem('reservations', JSON.stringify(reservations));
            closeModal('addReservationModal');
            renderReservations();
            document.getElementById('addReservationModal').querySelector('form').reset();
        }

        function deleteReservation(index) {
            reservations.splice(index, 1);
            localStorage.setItem('reservations', JSON.stringify(reservations));
            renderReservations();
        }

        // TRIP DETAIL
        function renderTripDetail() {
            document.getElementById('daySelectorHorizontal').innerHTML = '';

            for (let i = 1; i <= totalDays; i++) {
                const btn = document.createElement('div');
                btn.className = `day-btn ${i === currentDay ? 'active' : ''}`;
                btn.innerHTML = `
                    <div>${['Wed', 'Thu', 'Fri', 'Sat', 'Sun', 'Mon', 'Tue'][i-1]}</div>
                    <div>${14 + i - 1}</div>
                    <div class="day-btn-weather">â˜€ï¸</div>
                    <div class="day-btn-temp">12Â°C</div>
                `;
                btn.onclick = () => { currentDay = i; renderTripDetail(); };
                document.getElementById('daySelectorHorizontal').appendChild(btn);
            }

            renderActivityList();
            updateCountdown();
        }

        function renderActivityList() {
            const dayActivities = activities.filter(a => a.day === currentDay);
            const container = document.getElementById('activityList');

            if (dayActivities.length === 0) {
                container.innerHTML = '<p style="text-align: center; color: #999; padding: 40px 20px;">æš«ç„¡å®‰æ’æ´»å‹•</p>';
            } else {
                container.innerHTML = '';
                dayActivities.forEach(act => {
                    const item = document.createElement('div');
                    item.className = 'activity-item';
                    item.innerHTML = `
                        <div class="activity-dot"></div>
                        <div class="activity-time">ğŸ• ${act.time}</div>
                        <div class="activity-location">ğŸ“ ${act.name}</div>
                        ${act.hours ? `<div style="font-size: 12px; color: #999;">â° ${act.hours}</div>` : ''}
                        ${act.ticket ? `<div style="font-size: 12px; color: var(--primary-red); font-weight: 600;">ğŸ« Â¥${act.ticket}</div>` : ''}
                        ${act.description ? `<div style="font-size: 13px; margin-top: 8px;">${act.description}</div>` : ''}
                    `;
                    container.appendChild(item);
                });
            }
        }

        function openAddActivityModal() {
            document.getElementById('addActivityModal').classList.add('active');
        }

        function addActivity(e) {
            e.preventDefault();
            activities.push({
                day: currentDay,
                time: document.getElementById('activityTime').value,
                name: document.getElementById('activityName').value,
                type: document.getElementById('activityType').value,
                hours: document.getElementById('activityHours').value,
                ticket: document.getElementById('activityTicket').value,
                description: document.getElementById('activityDescription').value
            });
            localStorage.setItem('activities', JSON.stringify(activities));
            closeModal('addActivityModal');
            renderTripDetail();
            document.getElementById('addActivityModal').querySelector('form').reset();
        }

        function updateCountdown() {
            const start = new Date('2026-01-14');
            const now = new Date();
            const diff = start - now;
            
            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));

            document.getElementById('countdownTimer').textContent = `${Math.max(0, days)}å¤© ${hours}å°æ™‚ ${minutes}åˆ†é˜`;
        }

        // BUDGET
        function renderBudget() {
            const total = 50000;
            const spent = activities.reduce((acc, a) => acc + (parseInt(a.ticket) || 0), 0);
            const remaining = total - spent;

            document.getElementById('totalBudget').textContent = `Â¥${total.toLocaleString()}`;
            document.getElementById('spentBudget').textContent = `Â¥${spent.toLocaleString()}`;
            document.getElementById('remainingBudget').textContent = `Â¥${remaining.toLocaleString()}`;
        }

        // TOOLBOX
        function renderToolbox() {
            const container = document.getElementById('checklistItems');
            container.innerHTML = '';

            checklists.forEach((item, index) => {
                const itemEl = document.createElement('div');
                itemEl.style.cssText = 'display: flex; gap: 12px; padding: 12px; margin-bottom: 8px; background: #F8F9FA; border-radius: 8px;';
                itemEl.innerHTML = `
                    <input type="checkbox" ${item.completed ? 'checked' : ''} onchange="toggleChecklist(${index})" style="width: 18px; cursor: pointer;">
                    <span style="flex: 1; ${item.completed ? 'text-decoration: line-through; opacity: 0.6;' : ''}">${item.item}</span>
                `;
                container.appendChild(itemEl);
            });
        }

        function toggleChecklist(index) {
            checklists[index].completed = !checklists[index].completed;
            localStorage.setItem('checklists', JSON.stringify(checklists));
            renderToolbox();
        }

        function addChecklistItem() {
            const input = document.getElementById('newChecklistItem');
            if (input.value.trim()) {
                checklists.push({ item: input.value, completed: false });
                localStorage.setItem('checklists', JSON.stringify(checklists));
                input.value = '';
                renderToolbox();
            }
        }

        function convertCurrency(fromHkd = false) {
            const jpy = document.getElementById('jpyInput');
            const hkd = document.getElementById('hkdInput');

            if (fromHkd) {
                jpy.value = (parseFloat(hkd.value) / EXCHANGE_RATE).toFixed(0);
            } else {
                hkd.value = (parseFloat(jpy.value) * EXCHANGE_RATE).toFixed(2);
            }
        }

        function openModal(modalId) {
            document.getElementById(modalId).classList.add('active');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        // INITIALIZE
        renderShopping();
        renderTripDetail();
        setInterval(updateCountdown, 1000);
    </script>
</body>
</html>
